<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/layout_elevation_small"
    android:layout_margin="@dimen/layout_margin_small">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nba_player_adapter_ll_parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_medium"
        android:layout_margin="@dimen/layout_margin_small"
        app:layout_constraintBottom_toBottomOf="@+id/tv_nba_player_last_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_nba_player_last_name">

        <TextView
            android:id="@+id/tv_item_nba_team_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_small"
            android:layout_marginTop="@dimen/margin_top_small"
            android:text="@string/nba_team_full_name"
            android:textColor="@color/red"
            android:textSize="@dimen/textsize_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_item_nba_team_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_small"
            android:text="@string/nba_team_city"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>