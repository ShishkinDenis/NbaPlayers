<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_bottom_sheet_dialog_image_path"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_bottom_sheet_dialog_image_path_choose_image_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/bottom_sheet_dialog_image_path_padding"
        android:text="@string/choose_image_path"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_medium" />

    <TextView
        android:id="@+id/tv_bottom_sheet_dialog_image_path_image_from_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/bottom_sheet_dialog_image_path_padding"
        android:text="@string/image_from_camera"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_medium" />

    <TextView
        android:id="@+id/tv_bottom_sheet_dialog_image_path_image_from_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/bottom_sheet_dialog_image_path_padding"
        android:text="@string/image_from_gallery"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_medium" />
</LinearLayout>